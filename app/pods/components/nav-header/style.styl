  width:      100%
  display:    flex
  margin-top: auto
  background: linear-gradient(rgba(255,255,255,1), rgba(255,255,255,1), rgba(255,255,255,1), rgba(255,255,255,0))
  position: fixed
  top: 0
  left: 0
  z-index: 100;


.nav-items
  width:      100%
  text-align: center

  ul
    width:           100%
    height:          100%
    list-style-type: none;
    padding:         0;
    overflow:        hidden;
    display:         flex

  li
    width: 20%

  li a
    vertical-align:  -webkit-baseline-middle
    padding:         4px
    text-decoration: none;
    font-family:     "Lato"
    color:           rgba(31, 36, 42, 0.22)
    font-weight:     300

    &:hover
      color: rgba(31, 36, 42, 0.62)

  .active
    color: rgba(31, 36, 42, 0.42)
    font-weight: 400
