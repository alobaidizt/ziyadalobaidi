.post-container
  margin:      auto;
  margin-top: 80px
  height:      100%;
  width:       60%

  ::-webkit-scrollbar
      display: none

  p
    color: #788082
    font-family: "Lato", "Helvetica"
    font-weight: 300
    line-height: 150%
    text-align: justify

    code
      padding: 1px 2px
      border-radius: 4px
      color: white
      background: rgba(19, 141, 253, 0.72)
      font-family: "Lato", "Helvetica"
      font-weight: 200

  img, pre
    display: flex
    margin: 20px auto

  img
    width: 100%

  pre
    width: 80%

  table
    width: 80%
    margin: 0 auto

    th
      text-align: center
      color: #788082
      font-family: "Lato", "Helvetica"
      font-weight: 400

    td
      text-align: center
      color: #788082
      font-family: "Lato", "Helvetica"
      font-weight: 300

  a
    color: #eaC371
    font-family: "Lato", "Helvetica"
    text-decoration: blink dashed

  h1, h2, h3, h4, ul
    color: #788082
    font-family: "Lato", "Helvetica"

  pre
    background: rgba(120, 128, 130, 0.05)
    padding: 10px
    border-radius: 10px
    overflow: auto

    code
      color: rgba(19, 141, 253, 0.72)

      font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace
      text-rendering: geometricPrecision

  ul
    list-style-type: arabic-indic

  mark
    background-color: deeppink
    padding:          1px 2px
    border-radius:    4px
    color:            white
    font-family:      "Lato", "Helvetica"
    font-weight:      200

@media only screen and (max-width: 700px)
  .post-container
    p, p > code, table > th, table > td,
    a, h1, h2, h3, h4, ul, mark
      font-family: "Helvetica"
