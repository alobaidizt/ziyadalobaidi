.contact
  margin:     auto;
  margin-top: 100px;
  max-height: 100%;
  max-width:  80%
  text-align: center
  color:      rgba(31, 36, 42, 0.67)
  font-family: "Lato"
  font-weight: 300
  line-height: 150%

  & a
    text-decoration: none
    color:           rgba(46, 48, 49, 0.89)
    font-weight:     400
    cursor:          pointer

@media only screen and (max-width: 500px)
  .contact
    font-family: "Helvetica"
    font-weight: 200
