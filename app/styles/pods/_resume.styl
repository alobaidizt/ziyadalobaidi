.resume-pdf
  margin:     auto
  margin-top: 60px
  height:     80vh
  width:      60%

.left-side-container
  width:   20%
  display: grid

  .download
    border-radius:  20px
    padding:        4px 6px 4px 6px
    top:            90px
    font-family:    "Lato"
    font-size:      1.2vw
    text-transform: uppercase
    background:     orange
    cursor:         pointer
    position:       relative
    display:        flex
    margin:         0 auto
    font-weight:    300
    line-height:    150%

    & a
      color:           white
      text-decoration: none

.pdfobject-container
  height: 100%
  display: block

  .pdfobject
    border: 1px solid #666

.liquid-child
  height: 90%
